    <script>
        // Sample data for demonstration
        const studentData = {
            id: "STU-2023-0042",
            name: "Sarah Johnson",
            grade: "10",
            section: "A",
            adviser: "Ms. Rodriguez",
            dob: "March 15, 2008",
            gender: "Female",
            address: "123 Main Street, Cityville",
            contact: "(555) 123-4567",
            email: "sarah.johnson@student.plt.edu",
            parentName: "Robert Johnson",
            parentContact: "(555) 987-6543",
            parentEmail: "robert.johnson@email.com",
            gpa: 3.75,
            attendanceRate: "98%"
        };

        const scheduleData = [
            { time: "08:00 - 08:50", subject: "Mathematics", teacher: "Mr. Davis", room: "Room 201", status: "Completed" },
            { time: "09:00 - 09:50", subject: "Science", teacher: "Ms. Rodriguez", room: "Lab 101", status: "Completed" },
            { time: "10:00 - 10:50", subject: "English", teacher: "Mrs. Wilson", room: "Room 105", status: "Completed" },
            { time: "11:00 - 11:50", subject: "History", teacher: "Mr. Thompson", room: "Room 203", status: "Upcoming" },
            { time: "13:00 - 13:50", subject: "Physical Education", teacher: "Coach Miller", room: "Gym", status: "Upcoming" },
            { time: "14:00 - 14:50", subject: "Art", teacher: "Ms. Garcia", room: "Room 301", status: "Upcoming" }
        ];

        const gradesData = [
            { subject: "Mathematics", teacher: "Mr. Davis", q1: 90, q2: 94, final: 92, remarks: "Excellent" },
            { subject: "Science", teacher: "Ms. Rodriguez", q1: 96, q2: 100, final: 98, remarks: "Outstanding" },
            { subject: "English", teacher: "Mrs. Wilson", q1: 88, q2: 92, final: 90, remarks: "Very Good" },
            { subject: "History", teacher: "Mr. Thompson", q1: 82, q2: 88, final: 85, remarks: "Good" },
            { subject: "Physical Education", teacher: "Coach Miller", q1: 94, q2: 96, final: 95, remarks: "Excellent" },
            { subject: "Art", teacher: "Ms. Garcia", q1: 92, q2: 94, final: 93, remarks: "Excellent" }
        ];

        const attendanceData = [
            { date: "2023-10-16", day: "Monday", timeIn: "08:05 AM", timeOut: "03:30 PM", status: "present" },
            { date: "2023-10-13", day: "Friday", timeIn: "08:12 AM", timeOut: "03:25 PM", status: "present" },
            { date: "2023-10-12", day: "Thursday", timeIn: "08:20 AM", timeOut: "03:35 PM", status: "present" },
            { date: "2023-10-11", day: "Wednesday", timeIn: "08:08 AM", timeOut: "03:28 PM", status: "present" },
            { date: "2023-10-10", day: "Tuesday", timeIn: "08:15 AM", timeOut: "03:32 PM", status: "present" },
            { date: "2023-10-09", day: "Monday", timeIn: "08:22 AM", timeOut: "03:29 PM", status: "late" },
            { date: "2023-10-06", day: "Friday", timeIn: "08:10 AM", timeOut: "03:26 PM", status: "present" }
        ];

        const weeklySchedule = [
            { time: "08:00 - 08:50", mon: "Mathematics", tue: "Science", wed: "Mathematics", thu: "Science", fri: "Mathematics" },
            { time: "09:00 - 09:50", mon: "Science", tue: "Mathematics", wed: "Science", thu: "Mathematics", fri: "Science" },
            { time: "10:00 - 10:50", mon: "English", tue: "History", wed: "English", thu: "History", fri: "English" },
            { time: "11:00 - 11:50", mon: "History", tue: "English", wed: "History", thu: "English", fri: "History" },
            { time: "13:00 - 13:50", mon: "Physical Education", tue: "Art", wed: "Physical Education", thu: "Art", fri: "Physical Education" },
            { time: "14:00 - 14:50", mon: "Art", tue: "Physical Education", wed: "Art", thu: "Physical Education", fri: "Art" }
        ];

        // DOM Elements
        const sidebarLinks = document.querySelectorAll('.sidebar-menu a');
        const pages = document.querySelectorAll('.main-content');

        // Navigation functionality
        sidebarLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                
                // Update active link
                sidebarLinks.forEach(l => l.classList.remove('active'));
                link.classList.add('active');
                
                // Show corresponding page
                const pageId = link.getAttribute('data-page') + 'Page';
                pages.forEach(page => {
                    if (page.id === pageId) {
                        page.classList.remove('hidden');
                    } else {
                        page.classList.add('hidden');
                    }
                });
                
                // Load data for the page
                if (pageId === 'dashboardPage') {
                    populateScheduleTable(scheduleData);
                } else if (pageId === 'gradesPage') {
                    populateGradesTable(gradesData);
                } else if (pageId === 'attendancePage') {
                    populateStudentAttendanceTable(attendanceData);
                } else if (pageId === 'schedulePage') {
                    populateWeeklyScheduleTable(weeklySchedule);
                }
            });
        });

        // Populate today's schedule table
        function populateScheduleTable(data) {
            const tableBody = document.getElementById('scheduleTableBody');
            tableBody.innerHTML = '';
            
            data.forEach(item => {
                const row = document.createElement('tr');
                
                let statusClass = item.status === 'Completed' ? 'in' : 
                                item.status === 'Upcoming' ? 'out' : 'absent';
                
                row.innerHTML = `
                    <td>${item.time}</td>
                    <td>${item.subject}</td>
                    <td>${item.teacher}</td>
                    <td>${item.room}</td>
                    <td><span class="status ${statusClass}">${item.status}</span></td>
                `;
                
                tableBody.appendChild(row);
            });
        }

        // Populate grades table
        function populateGradesTable(data) {
            const tableBody = document.getElementById('gradesTableBody');
            tableBody.innerHTML = '';
            
            data.forEach(item => {
                const row = document.createElement('tr');
                
                let gradeClass = '';
                if (item.final >= 95) gradeClass = 'grade-a';
                else if (item.final >= 90) gradeClass = 'grade-b';
                else if (item.final >= 85) gradeClass = 'grade-c';
                else gradeClass = 'grade-d';
                
                row.innerHTML = `
                    <td>${item.subject}</td>
                    <td>${item.teacher}</td>
                    <td>${item.q1}%</td>
                    <td>${item.q2}%</td>
                    <td><span class="grade-badge ${gradeClass}">${item.final}%</span></td>
                    <td>${item.remarks}</td>
                `;
                
                tableBody.appendChild(row);
            });
        }

        // Populate student attendance table
        function populateStudentAttendanceTable(data) {
            const tableBody = document.getElementById('studentAttendanceTable');
            tableBody.innerHTML = '';
            
            data.forEach(item => {
                const row = document.createElement('tr');
                
                let statusClass = item.status === 'present' ? 'in' : 
                                item.status === 'absent' ? 'absent' : 'late';
                let statusText = item.status === 'present' ? 'Present' : 
                               item.status === 'absent' ? 'Absent' : 'Late';
                
                row.innerHTML = `
                    <td>${formatDate(item.date)}</td>
                    <td>${item.day}</td>
                    <td>${item.timeIn}</td>
                    <td>${item.timeOut}</td>
                    <td><span class="status ${statusClass}">${statusText}</span></td>
                `;
                
                tableBody.appendChild(row);
            });
        }

        // Populate weekly schedule table
        function populateWeeklyScheduleTable(data) {
            const tableBody = document.getElementById('weeklyScheduleTable');
            tableBody.innerHTML = '';
            
            data.forEach(item => {
                const row = document.createElement('tr');
                
                row.innerHTML = `
                    <td>${item.time}</td>
                    <td>${item.mon}</td>
                    <td>${item.tue}</td>
                    <td>${item.wed}</td>
                    <td>${item.thu}</td>
                    <td>${item.fri}</td>
                `;
                
                tableBody.appendChild(row);
            });
        }

        // Format date for display
        function formatDate(dateString) {
            const options = { year: 'numeric', month: 'short', day: 'numeric' };
            return new Date(dateString).toLocaleDateString('en-US', options);
        }

        // Initialize the dashboard with today's schedule
        populateScheduleTable(scheduleData);
    </script>
</body>
</html>
